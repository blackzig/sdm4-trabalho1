<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="br.edu.ifspsaocarlos.sdm.trabalho.DiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_coin1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cara"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:scaleType="centerInside"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_coin2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cara"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:scaleType="centerInside"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_coin3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cara"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:scaleType="centerInside"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_dice1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dice1"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/img_dice2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dice1"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:scaleType="centerInside"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/img_dice3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dice1"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:scaleType="centerInside"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_play_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Jogar Dado"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_play_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Jogar Moeda"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sum_dice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="Soma: "/>

        <TextView
            android:id="@+id/who_win_heads_or_tails"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5sp"
            android:text="Ganhou: "/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_dices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="Dados: "/>

        <Spinner
            android:id="@+id/spinner_dices"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <TextView
            android:id="@+id/text_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginLeft="5sp"
            android:text="Moedas: "/>

        <Spinner
            android:id="@+id/spinner_coins"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </LinearLayout>

</LinearLayout>
